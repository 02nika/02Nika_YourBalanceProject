@{
    ViewBag.Title = "Index";
}

@if (ViewBag.Path == null)
{
    using (Html.BeginForm("Index", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        <div class="form-horizontal">
            <h4>Image</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <input type="file" name="file" id="file" />
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Upload Image" class="btn col-sm-2 btn-success" />
                </div>
            </div>
        </div>
    }
}
else
{
    <img src="@Url.Content(ViewBag.Path)" style="width: 400px; height: 500px"  />
    using (Html.BeginForm("Remove", "Profile", FormMethod.Post))
    {
        <button class="btn btn-success" >DELETE</button>
    }
}




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
